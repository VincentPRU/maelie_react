rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      allow read;
      allow create: if request.resource.size < (5 * 1024 * 1024) && request.resource.contentType.matches('audio/mp3') || request.resource.contentType.matches('audio/mpeg');
      allow update: if request.auth != null && request.auth.token.email.matches('.*@smcq[.]qc.ca') && request.resource.size < 5 * 1024 * 1024 && request.resource.contentType.matches('audio/mp3') || request.resource.contentType.matches('audio/mpeg');
      allow delete: if request.auth != null && request.auth.token.email.matches('.*@smcq[.]qc.ca') && request.resource.size < 5 * 1024 * 1024 && request.resource.contentType.matches('audio/mp3') || request.resource.contentType.matches('audio/mpeg');
    }
  }
}
